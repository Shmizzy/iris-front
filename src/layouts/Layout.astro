---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Zenith - Advanced AI Art Generation System" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="noise"></div>
    <slot />
  </body>
</html>

<style is:global>
  @import '@fontsource/orbitron';
  @import '@fontsource/chakra-petch';

  :root {
    --accent: #ff00ff;
    --accent-gradient: linear-gradient(45deg, #ff00ff, #00ffff, #ff00ff);
    --background: #0a0014;
    --surface: rgba(20, 20, 40, 0.7);
    --surface-hover: rgba(30, 30, 60, 0.8);
    --text: #ffffff;
    --text-secondary: #a0a0ff;
    --border: rgba(255, 0, 255, 0.2);
    --hover-glow: 0 0 20px rgba(255, 0, 255, 0.3);
    --card-shadow: 0 8px 32px rgba(255, 0, 255, 0.15);
    --neon-text-shadow: 0 0 10px rgba(255, 0, 255, 0.8);
  }
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: 'Chakra Petch', system-ui, sans-serif;
    background: var(--background);
    color: var(--text);
    min-height: 100vh;
  }

  body {
    min-height: 100vh;
    padding: 1rem;
    position: relative;
    background: radial-gradient(circle at 50% 50%, rgba(60, 0, 120, 0.15) 0%, rgba(0, 0, 0, 0.2) 100%);
  }

  .noise {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    opacity: 0.05;
    z-index: 9999;
    background-image: url('data:image/png;base64,');
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Orbitron', sans-serif;
    font-weight: 600;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 1rem;
  }

  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    flex-wrap: wrap;
    gap: 1.5rem;
    padding: 1.5rem;
    background: var(--surface);
    border-radius: 16px;
    box-shadow: var(--card-shadow);
    border: 1px solid var(--border);
    backdrop-filter: blur(10px);
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .logo h1 {
    font-size: clamp(2rem, 4vw, 2.5rem);
    background: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: var(--neon-text-shadow);
  }

  .logo p {
    font-size: clamp(0.9rem, 2vw, 1rem);
    color: var(--text-secondary);
  }

  .nav {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .button {
    background: var(--surface);
    border: 1px solid var(--border);
    color: var(--text);
    padding: 0.75rem 1.25rem;
    border-radius: 8px;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
    font-size: 0.95rem;
    position: relative;
    overflow: hidden;
  }

  .button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.2),
      transparent
    );
    transition: 0.5s;
  }

  .button:hover::before {
    left: 100%;
  }

  .button:hover {
    background: var(--surface-hover);
    box-shadow: var(--hover-glow);
    transform: translateY(-2px);
    border-color: var(--accent);
  }

  .grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .grid {
      grid-template-columns: 2fr 1fr;
    }
  }

  @media (max-width: 480px) {
    body {
      padding: 0.5rem;
    }

    .container {
      padding: 0.5rem;
    }

    .header {
      flex-direction: column;
      text-align: center;
      padding: 1.5rem 1rem;
    }

    .nav {
      width: 100%;
      justify-content: center;
    }

    .button {
      width: 100%;
      justify-content: center;
    }
  }
</style>