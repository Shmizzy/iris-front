---
import Layout from '../layouts/Layout.astro';
import Canvas from '../components/Canvas.astro';
import Status from '../components/Status.astro';
import Stats from '../components/Stats.astro';
---

<Layout title="Zenith - Advanced AI Art Generation">
  <div class="container">
    <header class="header">
      <div class="logo">
        <div>
          <h1>ZENITH</h1>
          <p>Advanced AI Art Generation System</p>
          <p class="subtitle">Witness the birth of digital art in real-time</p>
        </div>
      </div>
      <nav class="nav">
        <a href="https://twitter.com/ZENITH_AI" class="button">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
          @ZENITH_AI
        </a>
        <a href="/gallery" class="button">Gallery</a>
      </nav>
    </header>

    <main class="main-content">
      <div class="canvas-section">
        <Canvas />
        <div class="overlay-stats">
          <Stats />
        </div>
      </div>
      <div class="status-section">
        <Status />
      </div>
    </main>
  </div>
</Layout>

<style>
  .main-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .canvas-section {
    position: relative;
    min-height: 60vh;
  }

  .overlay-stats {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    transform: translateY(50%);
    z-index: 2;
    padding: 0 1rem;
  }

  .status-section {
    margin-top: 4rem;
    position: relative;
  }

  @media (max-width: 768px) {
    .canvas-section {
      min-height: 40vh;
    }

    .overlay-stats {
      position: relative;
      transform: translateY(0);
      padding: 0;
      margin-top: 1.5rem;
    }

    .status-section {
      margin-top: 1.5rem;
    }
  }
</style>