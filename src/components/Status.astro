---
interface Props {
  currentIdea: string | null;
  currentPhase: string;
  currentStatus: string;
  lastGenerationTime: string;
}

const { 
  currentIdea = null,
  currentPhase = "ideation",
  currentStatus = "thinking",
  lastGenerationTime = new Date().toISOString()
} = Astro.props;
---
<div class="status">
    <div class="status-header">
      <div class="status-title">
        <h2>IRIS Communication</h2>
        <p class="subtitle">AI Art Agent</p>
      </div>
      <div class="status-badge">
        <span class="status-dot"></span>
        <span id="currentStatus">{currentStatus}</span>
      </div>
    </div>
  
    <div class="status-sections">
      <div class="status-section">
        <div class="section-header expand-button">
          <span class="section-icon">âš¡</span>
          <h3>Current Phase</h3>
        </div>
        <div class="expandable-content">
          <div class="section-content">
            <p id="currentPhase">{currentPhase}</p>
            <p class="timestamp" id="lastUpdate">Last updated: {new Date(lastGenerationTime).toLocaleString()}</p>
            {currentIdea && <p id="currentIdea" class="idea">{currentIdea}</p>}
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <style>
    .status {
      background: var(--surface);
      border: 1px solid var(--border);
      border-radius: 16px;
      display: flex;
      flex-direction: column;
      min-height: 0;
    }
  
    .status-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      padding: 1rem;
      border-bottom: 1px solid var(--border);
      flex-shrink: 0;
    }
  
    .status-title h2 {
      font-size: 1.25rem;
      margin-bottom: 0.25rem;
    }
  
    .subtitle {
      color: var(--accent);
      font-size: 0.875rem;
      opacity: 0.8;
    }
  
    .status-badge {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      background: rgba(0, 255, 157, 0.1);
      padding: 0.5rem 1rem;
      border-radius: 9999px;
      font-size: 0.875rem;
      color: var(--accent);
    }
  
    .status-dot {
      width: 8px;
      height: 8px;
      background: var(--accent);
      border-radius: 50%;
      animation: pulse 2s infinite;
    }
  
    .status-sections {
      padding: 1rem;
      overflow-y: auto;
      flex: 1;
    }
  
    .status-section {
      background: var(--code-bg);
      border: 1px solid var(--border);
      border-radius: 12px;
      margin-bottom: 0.75rem;
    }
  
    .section-header {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 1rem;
    }
  
    .section-icon {
      font-size: 1.25rem;
    }
  
    .section-header h3 {
      font-size: 1rem;
      color: var(--accent);
    }
  
    .section-content {
      color: var(--text-secondary);
      font-size: 0.9375rem;
      line-height: 1.6;
      padding: 0 1rem 1rem;
    }
  
    .concept-title {
      color: var(--text);
      font-weight: 500;
      margin: 0.5rem 0;
    }
  
    .description {
      opacity: 0.8;
    }
  
    .view-gallery {
      background: transparent;
      border: none;
      color: var(--accent);
      padding: 0.5rem 0;
      margin-top: 0.5rem;
      cursor: pointer;
      font-size: 0.875rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      transition: all 0.3s ease;
    }
  
    .view-gallery:hover {
      opacity: 0.8;
      transform: translateX(5px);
    }
  
    @keyframes pulse {
      0% {
        transform: scale(0.95);
        box-shadow: 0 0 0 0 rgba(0, 255, 157, 0.7);
      }
      70% {
        transform: scale(1);
        box-shadow: 0 0 0 6px rgba(0, 255, 157, 0);
      }
      100% {
        transform: scale(0.95);
        box-shadow: 0 0 0 0 rgba(0, 255, 157, 0);
      }
    }
  
    @media (max-width: 768px) {
    .status {
      border-radius: 0;
      height: auto;
      min-height: auto;
    }

    .status-header {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }

    .status-badge {
      width: 100%;
      justify-content: center;
    }

    .status-sections {
      padding: 0.75rem;
    }

    .status-section {
      margin-bottom: 0.75rem;
    }

    .section-header {
      padding: 0.75rem;
    }

    .section-content {
      padding: 0 0.75rem 0.75rem;
    }
  }
  </style>